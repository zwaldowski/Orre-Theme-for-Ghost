{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div id="site-head-content" class="inner">
        {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
        <h1 class="blog-title"><a href="/">{{@blog.title}}</a></h1>
        <h2 class="blog-description">{{@blog.description}}</h2>
		<p class="social-links">
            <a href="https://github.com/username"><i class="icon-github"></i></a>
            <a href="https://twitter.com/username"><i class="icon-twitter"></i></a>
            <a href="https://alpha.app.net/username"><i class="icon-adn"></i></a>
            <a href="https://google.com/+username"><i class="icon-gplus"></i></a>
            <a href="{{@blog.url}}/rss/"><i class="icon-rss"></i></a>
		</p>
    </div>
</header>

<main class="content" role="main">

    <article class="{{post_class}}">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        {{! Everything below outputs content of the the post which has been published }}

        <h1 class="post-title">{{{title}}}</h1>
		<span class="post-meta"><i class="icon-calendar"></i> <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></span>
		{{#if tags}}
		<span class="post-tags">
			<i class="icon-tag"></i>
			{{#tags}}
				{{name}}
			{{/tags}}
		</span>
		{{/if}}
        <section class="post-content">
            {{content}}
        </section>
        {{#if author}}
            <section class="author">
                <h5>by {{author.name}}</h5>
                <p>{{author.bio}}</p>
            </section>
        {{/if}}
        <footer class="post-footer">
            <section class="share">
                <h4>Share this post</h4>
                <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <i class="icon-twitter-squared"></i>
                </a>
                <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <i class="icon-facebook-squared"></i>
                </a>
                <a href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <i class="icon-gplus-squared"></i>
                </a>
    		</section>
			<section class="save-for-later">
				<h4>Or read it later, using</h4>
				<a href="http://www.instapaper.com/hello2?url={{url absolute="true"}}&title={{{title}}}"><i class="icon-instapaper"></i>Instapaper</a>
			</section>
			<section class="go-back">
				<h4>Or just</h4>
				<a href="/"><i class="icon-angle-circled-left"></i>go back to the index page</a>
			</section>
        </footer>

        {{/post}}

    </article>

</main>
